{{> header }}

<body>

  <div class="site-content">
    {{> menu }}
   <!-- .site-header -->

    <div class="hero" data-bg-image="images/banner.png">
      <div class="container">
        <form action="#" class="find-location" id="find-form">
          <input type="text" placeholder="Find your location..." id="find-term">
          <input type="button" value="Find" id="find-confirm">
        </form>

      </div>
    </div>
    <div class="forecast-table">
      <div class="container">
        <div class="forecast-container">
          <div class="today forecast">
            <div class="forecast-header">
              <div class="day">{{currentDay}}</div>
              <div class="date">{{currentDate}} {{currentMonth}}</div>
            </div> <!-- .forecast-header -->
            <div class="forecast-content">
              <div class="location" id="div-address"></div>
              <div class="degree">
                <div class="num" id="temperature">23<sup>o</sup>F</div>
                <div class="forecast-icon">
                  <img src="images/icons/icon-1.svg" alt="" width=90 id="main-icon">
                </div>
              </div>
              <span id="rain"><img src="images/icon-umberella.png" alt="">20%</span>
              <span id="wind"><img src="images/icon-wind.png" alt="">18km/h</span>
              <span id="compass"><img src="images/icon-compass.png" alt="">12:18</span>
            </div>
          </div>
          <div class="forecast">
            <div class="forecast-header">
              <div class="day">Tuesday</div>
            </div> <!-- .forecast-header -->
